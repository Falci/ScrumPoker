doctype html
html(lang="pt_BR")
  head
    title Scrum Poker
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Varela+Round')
    link(rel='stylesheet', href='/css/main.css')
    
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/poker.js')
  body
    .container 
        h1.header Scrum Poker
        #login.col-md-6
            form(onSubmit='return false')
                .form-group
                    label(for='user') Usuário
                    input.form-control#user(placeholder='Usuário', required)
                    
                .form-group
                    label(for='room') Sala
                    input.form-control#room(placeholder='Sala')
                    
                .form-group
                    label(for='pass') Senha
                    input.form-control#pass(placeholder='Senha', type='password')
                    
                input.btn.btn-default(type='submit', value='Entrar', disabled)
                        
            #modalLogin.modal.fade(data-backdrop='static')
                .modal-dialog
                    .modal-content
                        .modal-header
                            h4.modal-title  Aguarde
                        .modal-body
                            p. 
                                Verificando....
                        .modal-footer.hidden
                            button.btn.btn-default(data-dismiss="modal") Fechar
                
        #cards.col-md-6.hidden
            .row
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='0') 0
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='0.5') &#0189;
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='1') 1
            .row
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='2') 2
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='3') 3
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='5') 5
            .row
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='8') 8
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='13') 13
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='20') 20      
            .row
                .wrapper-2
                    button.btn.btn-primary.btn-lg(data-value='40') 40
                .wrapper-2
                    button.btn.btn-primary.btn-lg(data-value='100') 100
            .row
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='101') &#x221e;
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='102') ?
                .wrapper-3
                    button.btn.btn-primary.btn-lg(data-value='103')
                        span.glyphicon.glyphicon-time
                    
            #wait.modal.fade(data-backdrop='static')
                .modal-dialog
                    .modal-content
                        .modal-header
                            h4.modal-title  Aguardando outros
                        .modal-body
                            p Você escolheu
                                span 
                                
                        .modal-footer
                            button.btn.btn-default(data-dismiss="modal") Trocar
                    
    #footer
        .container.col-md-6
            p.text-muted Conectando...